<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ButtonDisableBug.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ButtonDisableBug"
    xmlns:local="clr-namespace:ButtonDisableBug"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="local:Section">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TextLengthToBoolConverter x:Key="lengthConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Entry x:Name="txtTitle" Text="{Binding Title}" />

            <Button
                HorizontalOptions="Fill"
                IsEnabled="{Binding Title.Length, Converter={StaticResource lengthConverter}}"
                Text="Click me" />

            <Button
                HorizontalOptions="Fill"
                IsEnabled="{Binding Title, Converter={toolkit:IsStringNotNullOrEmptyConverter}}"
                Text="Click me" />

            <Button
                HorizontalOptions="Fill"
                IsEnabled="{Binding Title, Converter={toolkit:IsStringNotNullOrWhiteSpaceConverter}}"
                Text="Click me" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
